<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Dashboard.dashboard_bottom"
    android:id="@+id/rr6">



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/smurfooo"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/user_dashboard_profile"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/user_dashboard_profile"
        android:id="@+id/user_dashboard_name"
        android:layout_marginTop="15dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_badge"
        android:layout_toRightOf="@id/user_dashboard_profile"
        android:layout_below="@id/user_dashboard_name"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"

        android:id="@+id/user_dashboard_badge"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|Points"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/user_dashboard_badge"
        android:layout_below="@id/user_dashboard_name"
        android:id="@+id/user_dashboard_points"
        android:layout_marginTop="15dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/learderboard"
        android:text="Leaderboard"
        android:layout_alignParentRight="true"

        />


    <Button
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/learderboard"
        android:id="@+id/history"
        android:text="History" />


    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cpb_background_progressbar_color="#FFCDD2"
        app:cpb_background_progressbar_width="2dp"
        android:layout_below="@id/user_dashboard_profile"
        app:cpb_progressbar_color="#F44336"
        android:id="@+id/progress_bar_chart"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        app:cpb_progressbar_width="5dp" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cpb_background_progressbar_color="#FFCDD2"
        app:cpb_background_progressbar_width="2dp"
        android:layout_below="@id/user_dashboard_profile"
        app:cpb_progressbar_color="#F44336"
        android:id="@+id/progress_bar_chart2"
        android:layout_toRightOf="@id/progress_bar_chart"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        app:cpb_progressbar_width="5dp" />



</RelativeLayout>
