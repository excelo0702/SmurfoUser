<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/people_profile"
        android:src="@color/Smurfogreen"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="People Name"
        android:id="@+id/people_name"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_toRightOf="@id/people_profile"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:text="1"
        android:background="@color/Smurfogreen"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:id="@+id/chatlist_notification"
        android:padding="5sp"></TextView>



</RelativeLayout>