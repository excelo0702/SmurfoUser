<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".category_view.Courses.courses"
    android:background="#FDFBFB"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_recycler_courses_view"
            ></androidx.recyclerview.widget.RecyclerView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#463D3D"
        android:layout_marginBottom="20dp"
        >

        <androidx.viewpager.widget.ViewPager
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:id="@+id/courses_viewPager"
            ></androidx.viewpager.widget.ViewPager>


        </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently Viewed"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_margin="10dp"

        ></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_recently_course"
            ></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trending Courses"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="10dp"

            ></TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_trending_course"
            ></androidx.recyclerview.widget.RecyclerView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostly Viewed"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="10dp"

            ></TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_mostlyViewed_course"
            ></androidx.recyclerview.widget.RecyclerView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For You"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_margin="10dp"

            ></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_ForYou_course"
            ></androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:id="@+id/access_all_course"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:text="Click here For Access all Course"
            ></TextView>


    </LinearLayout>

</ScrollView>